<Page x:Class="WpfAtm.OtherAmountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAtm"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="OtherAmountPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label VerticalContentAlignment="Center"  Content="Cancel"  Grid.Row="5" Grid.Column="0" FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""  Grid.Row="4" Grid.Column="0" FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""  Grid.Row="3" Grid.Column="0"   FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center"  Content="" Grid.Row="2"  Grid.Column="0" FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""  Grid.Row="1"  Grid.Column="0"   FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""     Grid.Row="0"  Grid.Column="0" FontSize="36" FontWeight="ExtraBold" Background="Red" />

        <Label  Content="Альфа-Банк" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center"   Grid.Row="0" Grid.Column="1" FontSize="48" FontWeight="ExtraBold" Background="Red" Foreground="White" />

        <Label Name="enterAmount" Content="Enter amount:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   Grid.Row="1" Grid.Column="1" FontSize="36" FontStyle="Italic" FontWeight="Bold" Foreground="Blue" />
        <TextBox Padding="5" x:Name="tbOtherAmount" Grid.Row="2" Grid.Column="1" Focusable="False" FontSize="36"  Background="LightBlue" Foreground="DarkBlue"  BorderThickness="2" Width="120"  FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Name="curCode" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   Grid.Row="3" Grid.Column="1" FontSize="36" FontStyle="Normal" FontWeight="ExtraBold" Foreground="Green" />

        <Label VerticalContentAlignment="Center"  Content="Enter"  Grid.Row="5" Grid.Column="2" FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""  Grid.Row="4" Grid.Column="2" FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""  Grid.Row="3" Grid.Column="2"   FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content="Clear" Grid.Row="2"  Grid.Column="2" FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""  Grid.Row="1"  Grid.Column="2"   FontSize="36" FontWeight="ExtraBold" Foreground="Blue" />
        <Label VerticalContentAlignment="Center" Content=""     Grid.Row="0"  Grid.Column="2" FontSize="36" FontWeight="ExtraBold" Background="Red" />

    </Grid>
</Page>
